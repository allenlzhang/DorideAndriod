<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <RelativeLayout
        android:id="@+id/list_item_car_test_relative1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/car_test_item_bg" >

        <TextView
            android:id="@+id/list_item_car_test_title_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:lineSpacingExtra="5dip"
            android:text="P"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/list_item_car_test_layout_right"
            android:layout_width="58dip"
            android:layout_height="58dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/car_test_item_circle_bg" >

            <RelativeLayout
                android:id="@+id/list_item_car_test_title_progressbar_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/test_loading_bg_p" >

                <ProgressBar
                    android:id="@+id/list_item_car_test_title_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminateDrawable="@drawable/loading_magnifier_xml"
                    android:maxHeight="27.5dip"
                    android:maxWidth="27.5dip"
                    android:minHeight="27.5dip"
                    android:minWidth="27.5dip" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/list_item_car_test_title_img"
                style="@style/public_img"
                android:layout_centerInParent="true"
                android:contentDescription="监测完成后的icon"
                android:src="@drawable/car_test_no_problem_large"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/list_item_car_test_title_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/list_item_car_test_title_txt1"
            android:text="动力体统"
            android:textColor="@color/text_color_gray2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_item_car_test_title_txt3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/list_item_car_test_layout_right"
            android:layout_toRightOf="@id/list_item_car_test_title_txt2"
            android:gravity="right"
            android:text="已检测：0项"
            android:textColor="@color/text_color_gray1"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_item_car_test_relative2"
        android:layout_width="fill_parent"
        android:layout_height="22dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:id="@+id/line_left"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="9.5dip"
            android:background="#D2D2D2" />

        <View
            android:id="@+id/line_right"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4.5dip"
            android:background="#D2D2D2" />

        <TextView
            android:id="@+id/list_item_car_test_txt"
            android:layout_width="300dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="9.5dip"
            android:layout_toLeftOf="@id/line_right"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="涡轮增压器循环空气阀电气故障"
            android:textColor="@color/text_color_gray1"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/list_item_car_test_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/list_item_car_test_txt"
            android:indeterminateDrawable="@drawable/loading_test_item_xml"
            android:maxHeight="15dip"
            android:maxWidth="15dip"
            android:minHeight="15dip"
            android:minWidth="15dip" />

        <ImageView
            android:id="@+id/list_item_car_test_img"
            style="@style/public_img"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/list_item_car_test_txt"
            android:src="@drawable/car_test_no_problem"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/list_item_car_test_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#D2D2D2" />

</LinearLayout>