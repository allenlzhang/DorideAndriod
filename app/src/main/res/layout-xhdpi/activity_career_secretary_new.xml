<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/activity_career_secretary_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dip"
        android:paddingRight="10dip" >

        <ImageView
            android:id="@+id/activity_career_secretary_img"
            style="@style/public_img"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dip"
            android:paddingBottom="5dip" />

        <TextView
            android:id="@+id/activity_career_secretary_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginTop="13dip"
            android:layout_toRightOf="@+id/activity_career_secretary_img"
            android:text="@string/secretary_name"
            android:textColor="@color/text_color_gray2"
            android:textSize="@dimen/text_size_small" 
            android:background="@drawable/secratry_txt_bg"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/activity_career_secretary_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@null"
        android:layout_below="@id/activity_career_secretary_lay"/>

</RelativeLayout>