<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/illegal_list_item_bg"
    android:orientation="vertical"
    android:padding="1dip" >

    <RelativeLayout
        android:id="@+id/list_item_query_illegal_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dip"
        android:paddingLeft="10dip" 
        android:paddingRight="10dip">

        <ImageView
            android:id="@+id/list_item_query_illegal_img_state"
            android:layout_width="37dip"
            android:layout_height="16dip"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginLeft="3dip" 
            android:layout_marginTop="15dip"/>

        <TextView
            android:id="@+id/list_item_query_illegal_txt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="12dip"
            android:layout_toLeftOf="@id/list_item_query_illegal_img_state"
            android:text="@string/car_illegal_address"
            android:textColor="@color/text_color_gray2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_item_query_illegal_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_query_illegal_txt1"
            android:layout_marginBottom="10dip"
            android:text="@string/car_illegal_description"
            android:textColor="@color/text_color_gray1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_item_query_illegal_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_query_illegal_txt2"
            android:layout_marginRight="10dip"
            android:text="@string/car_illegal_date"
            android:textColor="@color/text_color_gray1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_item_query_illegal_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_query_illegal_txt2"
            android:layout_marginRight="6dip"
            android:layout_toRightOf="@id/list_item_query_illegal_txt3"
            android:text="@string/car_illegal_punish_score"
            android:textColor="@color/text_color_gray1"
            android:textSize="@dimen/text_size_small" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/list_item_query_illegal_txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_query_illegal_txt2"
            android:layout_toRightOf="@id/list_item_query_illegal_txt4"
            android:text="@string/car_illegal_punish_money"
            android:textColor="@color/text_color_gray1"
            android:textSize="@dimen/text_size_small" 
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/remote_border"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_item_query_illegal_txt6"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/remote_btn"
            android:drawableLeft="@drawable/icon_map"
            android:drawablePadding="-20dip"
            android:gravity="center"
            android:paddingLeft="45dip"
            android:text="@string/map"
            android:textColor="@color/text_color_gray3"
            android:textSize="18sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/remote_border" />

        <TextView
            android:id="@+id/list_item_query_illegal_txt7"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/remote_btn"
            android:drawableLeft="@drawable/icon_spit"
            android:drawablePadding="-20dip"
            android:gravity="center"
            android:paddingLeft="45dip"
            android:text="@string/spit"
            android:textColor="@color/text_color_gray3"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>