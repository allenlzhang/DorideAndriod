<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background" >

    <include 
        android:id="@+id/title"
        layout="@layout/head_back" />

    <ImageView
        android:id="@+id/about_app_img_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/title"
        android:src="@drawable/icon_domy_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dip"/>

    <TextView
        android:id="@+id/about_app_txt_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="APP版本"
        android:textColor="@color/text_color_gray1"
        android:textSize="12sp"
         android:layout_below="@id/about_app_img_icon1"
         android:layout_marginTop="13dip" />

    <View 
        android:id="@+id/line_bottom"
        android:layout_width="59dip"
        android:layout_height="1dip"
        android:background="#A0A0A0"
        android:layout_marginBottom="66.5dip"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"/>
    
    <TextView
        android:id="@+id/about_app_txt_provision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="《服务条款》"
        android:textColor="@color/text_color_gray2"
        android:textSize="14sp"
        android:textStyle="bold" 
        android:layout_centerHorizontal="true"
        android:layout_above="@id/line_bottom"/>

</RelativeLayout>