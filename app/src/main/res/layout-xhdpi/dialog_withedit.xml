<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="4dip" >

    <!-- 标题部分 -->

    <TextView
        android:id="@+id/dialog_withedit_title"
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:gravity="bottom"
        android:paddingLeft="18dip"
        android:text="提示"
        android:textColor="#45bbe6"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dialog_withedit_title_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_divider"
        android:visibility="gone" />
    <!-- 内容部分 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="76dip"
        android:orientation="vertical"
        android:paddingLeft="18dip"
        android:paddingRight="18dip" 
        android:focusable="false">

        <TextView
            android:id="@+id/dialog_withedit_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="请输入您的登录密码"
            android:textColor="#505050"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/dialog_withedit_edt"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical"
            android:hint="请输入"
            android:inputType="textPassword"
            android:paddingLeft="8dip"
            android:textColorHint="@color/text_color_gray1"
            android:textSize="16sp" 
            android:textColor="@color/text_color_gray3"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="49dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="top"
            android:background="@drawable/dialog_div_h" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="0.5dip"
            android:background="@drawable/dialog_div_v"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_withedit_btn1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_bg"
                android:gravity="center"
                android:text="确认"
                android:textColor="#505050"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:background="#BDBDBD" />

            <TextView
                android:id="@+id/dialog_withedit_btn2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#505050"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>