<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secretary_item_bg_white"
    android:orientation="vertical"
    android:paddingBottom="1dip"
    android:paddingLeft="1dip"
    android:paddingRight="1dip"
    android:paddingTop="7dip" >

    <LinearLayout
        android:id="@+id/list_item_secretary_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="12dip" >

            <ImageView
                android:id="@+id/list_item_secretary_img_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="置顶图标"
                android:src="@drawable/secretary_tips_top"
                android:visibility="gone" />

            <TextView
                android:id="@+id/list_item_secretary_txt1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/list_item_secretary_img_top"
                android:text="@string/secretary_tip_title"
                android:textColor="@color/text_color_gray3"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>

        <include
            android:id="@+id/list_item_secretary_table"
            layout="@layout/layout_secretary_report_table"
            android:visibility="gone" />

        <TextView
            android:id="@+id/list_item_secretary_txt2"
            style="@style/secretary_tips_txt2"
            android:text="@string/secretary_tip_content" />

        <TextView
            android:id="@+id/list_item_secretary_btn"
            android:layout_width="fill_parent"
            android:layout_height="29dip"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/secretary_btn_bg"
            android:drawableRight="@drawable/arrow_down"
            android:gravity="center"
            android:paddingLeft="115dip"
            android:paddingRight="115dip"
            android:text="详情"
            android:textColor="@color/text_color_gray1"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/list_item_secretary_img"
            style="@style/public_img"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:contentDescription="活动奖品图标"
            android:visibility="gone" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/list_item_secretary_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_gravity="bottom"
        android:background="#F6F6F6"
        >

        <TextView
            android:id="@+id/list_item_secretary_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:textColor="@color/text_color_gray1"
            android:textSize="@dimen/text_size_small_s2" />

        <ImageView
            android:id="@+id/list_item_secretary_img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_item_secretary_txt3"
            android:src="@drawable/sesame_icon_delete"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/list_item_secretary_txt4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="6dip"
            android:drawableRight="@drawable/sesame_arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:text=""
            android:textColor="@color/red_rose" />

        <TextView
            android:id="@+id/list_item_secretary_txt5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:text=""
            android:textColor="@color/red_rose"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>