<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_setting_userinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background" >

    <include
        android:id="@+id/title"
        layout="@layout/head_back" />

    <RelativeLayout
        android:id="@+id/activity_setting_userinfo_layout1"
        style="@style/setting_userinfo_layout1"
        android:layout_height="74dip"
        android:layout_below="@id/title"
        android:layout_marginBottom="13dip"
        android:layout_marginTop="21dip" >

        <TextView
            android:id="@+id/title1"
            style="@style/setting_userinfo_text1"
            android:layout_marginRight="61dip"
            android:text="头像" />

        <ImageView
            android:id="@+id/img_arrow"
            style="@style/setting_img2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dip" />

        <ImageView
            android:id="@+id/activity_setting_userinfo_img"
            style="@style/img_head_icon"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_setting_userinfo_layout2"
        style="@style/setting_userinfo_layout1"
        android:layout_below="@id/activity_setting_userinfo_layout1"
        android:visibility="gone" >

        <TextView
            android:id="@+id/title2"
            style="@style/setting_userinfo_text1"
            android:layout_marginRight="45dip"
            android:text="手机号" />

        <TextView
            android:id="@+id/activity_setting_userinfo_txt1"
            style="@style/setting_userinfo_text2"
            android:layout_alignParentRight="true"
            android:drawablePadding="13dip"
            android:drawableRight="@drawable/arrow_right2"
            android:text="18655865855" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/activity_setting_userinfo_layout2"
        android:background="#ffffff"
        android:visibility="gone" />

    <View
        android:id="@+id/line1"
        style="@style/setting_line_h"
        android:layout_below="@id/activity_setting_userinfo_layout2"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/activity_setting_userinfo_layout3"
        style="@style/setting_userinfo_layout1"
        android:layout_below="@id/line1"
        android:layout_marginBottom="13dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/title3"
            style="@style/setting_userinfo_text1"
            android:layout_marginRight="61dip"
            android:text="密码" />

        <TextView
            android:id="@+id/activity_setting_userinfo_txt2"
            style="@style/setting_userinfo_text2"
            android:layout_alignParentRight="true"
            android:drawablePadding="13dip"
            android:drawableRight="@drawable/arrow_right2"
            android:text="********" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_setting_userinfo_layout4"
        style="@style/setting_userinfo_layout1"
        android:layout_below="@id/activity_setting_userinfo_layout1" >

        <TextView
            android:id="@+id/title4"
            style="@style/setting_userinfo_text1"
            android:layout_marginRight="23dip"
            android:text="姓名/昵称" />

        <TextView
            android:id="@+id/activity_setting_userinfo_txt3"
            style="@style/setting_userinfo_text2"
            android:layout_alignParentRight="true"
            android:drawablePadding="13dip"
            android:drawableRight="@drawable/arrow_right2"
            android:text="苏家东" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/activity_setting_userinfo_layout4"
        android:background="#ffffff" />

    <View
        android:id="@+id/line2"
        style="@style/setting_line_h"
        android:layout_below="@id/activity_setting_userinfo_layout4" />

    <RelativeLayout
        android:id="@+id/activity_setting_userinfo_layout5"
        style="@style/setting_userinfo_layout1"
        android:layout_below="@id/line2" >

        <TextView
            android:id="@+id/title5"
            style="@style/setting_userinfo_text1"
            android:layout_marginRight="61dip"
            android:text="性别" />

        <TextView
            android:id="@+id/activity_setting_userinfo_txt4"
            style="@style/setting_userinfo_text2"
            android:layout_alignParentRight="true"
            android:drawablePadding="13dip"
            android:drawableRight="@drawable/arrow_right2"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_setting_userinfo_layout6"
        style="@style/setting_userinfo_layout1"
        android:layout_below="@id/activity_setting_userinfo_layout5"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/title6"
            style="@style/setting_userinfo_text1"
            android:layout_marginRight="61dip"
            android:text="生成二维码" />

        <TextView
            android:id="@+id/activity_setting_userinfo_txt6"
            style="@style/setting_userinfo_text2"
            android:layout_alignParentRight="true"
            android:drawablePadding="13dip"
            android:drawableRight="@drawable/transfer_generate_code"
            android:text="" />
    </RelativeLayout>

</RelativeLayout>