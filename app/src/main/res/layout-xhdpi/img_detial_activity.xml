<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/layout_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/img_detial_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_page_head_bg" >

        <ImageView
            android:id="@+id/img_detial_title_img1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/head_margin_h"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/img_detial_title_txt1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_color_gray3"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/img_detial_title_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/head_margin_h"
            android:src="@drawable/icon_delete_large" />

        <TextView
            style="@style/line_h"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/img_detial_lay_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>

</LinearLayout>