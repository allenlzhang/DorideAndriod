<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_air_condition_bg"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <ImageView
            android:id="@+id/dialog_QRcode_img_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dip"
            android:background="@drawable/icon_cross" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_two_img_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
             />

        <TextView
            android:id="@+id/dialog_two_txt_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_gray3"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/dialog_two_img_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
             />
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_two_img_code"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
         />

</LinearLayout>