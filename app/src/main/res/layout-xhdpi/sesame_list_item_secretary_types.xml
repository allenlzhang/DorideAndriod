<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="30dip" >

    <ImageView
        android:id="@+id/activity_career_secretary_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toRightOf="@+id/activity_career_secretary_icon"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/activity_career_secretary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_gray3"
            android:textSize="@dimen/text_size_middle1" />

        <ImageView
            android:id="@+id/activity_career_secretary_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/activity_career_secretary_title"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@id/activity_career_secretary_title"
            android:src="@drawable/icon_dot" />

        <TextView
            android:id="@+id/activity_career_secretary_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_career_secretary_title"
            android:layout_marginTop="6dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_gray1"
            android:textSize="@dimen/text_size_small_s1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/arrow_right2" />

    <View
        android:id="@+id/line"
        style="@style/line_h"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp" />

</RelativeLayout>