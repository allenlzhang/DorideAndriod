<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#F0F0F0"
    >

    <TextView
        android:id="@+id/car_main_txt_head"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:gravity="center"

        android:textColor="@color/text_color_gray3"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/car_main_txt_head2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/text_color_gray3"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/car_main_txt_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dip"
        android:layout_marginRight="5dip"
        android:drawableLeft="@drawable/remote_state"
        android:drawablePadding="3dip"
        android:gravity="bottom"
        android:text="车辆状态           "
        android:textColor="@color/text_color_gray3"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/car_main_txt_recorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dip"
        android:drawableLeft="@drawable/remote_recorder"
        android:drawablePadding="1dip"
        android:gravity="bottom"
        android:text="远程记录"
        android:textColor="@color/text_color_gray3"
        android:textSize="14sp"
        android:visibility="gone" />


</RelativeLayout>