<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dip"
        android:paddingTop="8dip" >

        <ImageView
            android:id="@+id/layout_report_month1_img1"
            style="@style/img_head_icon"
            android:layout_marginRight="13dip"
            android:contentDescription="用户头像icon"
            android:src="@drawable/icon_default_head" />

        <TextView
            android:id="@+id/layout_report_month1_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户姓名"
            android:textColor="@color/text_color_gray2"
            android:textSize="@dimen/text_size_small" />

        <View style="@style/line_v_head" />

        <ImageView
            android:id="@+id/layout_report_month1_img2"
            style="@style/public_img"
            android:contentDescription="用户性别icon"
            android:src="@drawable/icon_sex_secret" />

        <View style="@style/line_v_head" />

        <ImageView
            android:id="@+id/layout_report_month1_img3"
            style="@style/img_car_icon"
            android:contentDescription="用户座驾icon"
            android:src="@drawable/default_car_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/line_h1"
        style="@style/line_h"
        android:layout_below="@id/layout1" />

    <ImageView
        style="@style/public_img"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line_h1"
        android:src="@drawable/icon_month" />

    <TextView
        android:id="@+id/layout_report_month1_txt2"
        style="@style/report_txt_large"
        android:layout_below="@id/line_h1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dip"
        android:text="" />

    <TextView
        android:id="@+id/title"
        style="@style/report_txt_middle"
        android:layout_below="@id/layout_report_month1_txt2"
        android:layout_centerHorizontal="true"
        android:text="@string/report_score_day" />

    <TextView
        android:id="@+id/layout_report_month1_txt3"
        style="@style/report_txt_huge_l1"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:text="" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_report_month1_txt3"
        android:layout_marginBottom="50dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/layout_report_month1_txt4"
            style="@style/report_txt_small"
            android:text="" />

        <TextView
            android:id="@+id/layout_report_month1_txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dip"
            android:text=""
            android:textColor="@color/text_color_green"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>

    <ImageView
        android:id="@+id/layout_report_month1_img_next"
        style="@style/public_img"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:src="@drawable/arrow_down_gray" />

</RelativeLayout>