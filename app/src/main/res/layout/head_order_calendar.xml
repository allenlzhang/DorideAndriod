<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/calendar_subhead_bg_order"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <ImageView
        android:id="@+id/head_order_calender_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_calendar_left_order" />

    <TextView
        android:id="@+id/head_order_calender_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="2014å¹´"
        android:textColor="@color/text_color_gray3"
        android:textSize="@dimen/text_size_middle" />

    <ImageView
        android:id="@+id/head_order_calender_img3"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/head_order_calender_txt"
        android:src="@drawable/head_order_calendar_jt"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/head_order_calender_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_calendar_right_order" />

</RelativeLayout>