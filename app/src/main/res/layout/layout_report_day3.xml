<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="@dimen/report_month_paddingR" >

    <RelativeLayout
        android:id="@+id/relative_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dip" >

        <TextView
            android:id="@+id/layout_report_day3_txt2"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dip"
            android:background="@drawable/text_bg_cycle_red"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/layout_report_day3_txt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/layout_report_day3_txt2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_gray1"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.carlt.sesame.ui.view.CircleValueBar
        android:id="@+id/layout_report_day3_valuebar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/circlevaluebar_height"
        android:layout_below="@id/relative_layout1"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="30dip"/>

    <TextView
        android:id="@+id/line1"
        style="@style/line_h"
        android:layout_below="@+id/layout_report_day3_valuebar"
        android:layout_marginBottom="13dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="135dip"
        android:layout_below="@id/line1"
        android:orientation="horizontal"
        android:paddingBottom="15dip"
        android:paddingTop="15dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/report_txt_middle"
                android:text="@string/report_drive_duration2" />

            <ImageView
                style="@style/img_bottom_three"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/icon_clock" />

            <TextView
                android:id="@+id/layout_report_day3_txt3"
                style="@style/report_txt_middle"
                android:singleLine="true"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/report_txt_middle"
                android:text="@string/report_speed_max2" />

            <ImageView
                style="@style/img_bottom_three"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/icon_flash" />

            <TextView
                android:id="@+id/layout_report_day3_txt4"
                style="@style/report_txt_middle"
                android:singleLine="true"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/report_txt_middle"
                android:text="@string/report_speed_average2" />

            <ImageView
                style="@style/img_bottom_three"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/icon_speed_bottom" />

            <TextView
                android:id="@+id/layout_report_day3_txt5"
                style="@style/report_txt_middle"
                android:singleLine="true"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>