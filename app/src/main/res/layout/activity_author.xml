<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">
    <ImageView 
        android:id="@+id/author_img"
        android:layout_width="67.5dip"
        android:layout_height="67.5dip"
        android:layout_marginTop="45dip"
        android:src="@drawable/safe_author"/>
    
    <TextView 
        android:id="@+id/author_txt_mobilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="24sp"
        android:text="****提出授权请求"
        android:layout_marginTop="21dip"/>
    
     <TextView
        android:id="@+id/author_txt_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dip"
        android:text=""
        android:textColor="@color/text_color_gray2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/author_txt_permit"
        style="@style/public_bottom_btn_blue"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="@dimen/usercenter_margin"
        android:layout_marginRight="@dimen/usercenter_margin"
        android:layout_marginTop="20dip"
        android:text="允许授权" />
    
    <TextView
        android:id="@+id/author_txt_refuse"
        style="@style/public_bottom_btn_blue"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="@dimen/usercenter_margin"
        android:layout_marginRight="@dimen/usercenter_margin"
        android:layout_marginTop="13dip"
        android:text="拒绝授权" 
        android:background="@drawable/bottom_btn_bg_dark"/>

</LinearLayout>
