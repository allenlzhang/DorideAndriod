<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_air_condition_bg"
              android:orientation="vertical">

    <!-- 内容部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llItem1"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivIcon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:background="@drawable/remote_lock_selector"/>

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:gravity="center"
                android:text="dsdf"
                android:textColor="#666666"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llItem2"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:clickable="true"
                android:background="@drawable/remote_lock_selector"/>

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="dsdf"
                android:textColor="#666666"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#d6d6d6"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/line_v"
            android:gravity="center"
            android:text="关闭"
            android:textColor="#2c77c0"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </RelativeLayout>


</LinearLayout>