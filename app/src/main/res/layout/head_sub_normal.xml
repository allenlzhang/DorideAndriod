<?xml version="1.0" encoding="utf-8"?><!-- 姜黄色背景的副标题 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="12dp"
              android:paddingRight="12dp">


    <ImageView
        android:id="@+id/layout_sub_head_img"
        android:layout_width="46dip"
        android:layout_height="46dip"
        android:layout_centerInParent="true"
        android:contentDescription="信息中心图标"
        android:src="@drawable/icon_secretary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dip"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dip"
        android:background="@drawable/information_centre_txt_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:minLines="1"
            android:textColor="@color/title_bg"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/layout_sub_head_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:minLines="1"
            android:textColor="@color/title_bg"
            android:textSize="14sp"/>

    </LinearLayout>


</LinearLayout>