<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="154dp"
    android:layout_height="154dp"
    android:background="@drawable/dialog_waiting_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="4dip"
    android:paddingRight="4dip" >



        <ProgressBar
            android:id="@+id/progress_img_animate"
            android:layout_marginTop="25dp"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/progress_dialog_outer_s"
            android:indeterminateDrawable="@drawable/page_loading_xml"
            android:maxHeight="50dip"
            android:maxWidth="50dip"
            android:minHeight="50dip"
            android:minWidth="50dip" >
        </ProgressBar>


    <TextView
        android:id="@+id/progress_txt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="正在获取数据..."
        android:textColor="#30a4d7"
        android:textSize="12sp" />

</LinearLayout>