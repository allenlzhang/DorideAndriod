<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        style="@style/report_txt_large"
        android:layout_marginTop="36dip"
        android:text="@string/report_oil" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dip" >

        <TextView
            android:id="@+id/layout_report_month5_txt1"
            style="@style/report_txt_huge"
            android:layout_centerHorizontal="true"
            android:text="" />

        <TextView
            android:id="@+id/layout_report_month5_txt1_danwei"
            style="@style/report_txt_small_green"
            android:layout_alignBottom="@id/layout_report_month5_txt1"
            android:layout_toRightOf="@id/layout_report_month5_txt1"
            android:text="升" />

    </RelativeLayout>

    <TextView
        android:id="@+id/layout_report_month5_txt2"
        style="@style/report_txt_middle"
        android:layout_marginBottom="50dip"
        android:text="" />

    <TextView
        style="@style/report_txt_large"
        android:text="@string/report_oil_average" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dip" >

        <TextView
            android:id="@+id/layout_report_month5_txt3"
            style="@style/report_txt_huge"
            android:layout_centerHorizontal="true"
            android:text="" />

        <TextView
            style="@style/report_txt_small_green"
            android:layout_alignBottom="@id/layout_report_month5_txt3"
            android:layout_toRightOf="@id/layout_report_month5_txt3"
            android:text="升/百公里" />
    </RelativeLayout>

    <com.carlt.sesame.ui.view.CircleValueBar
        android:id="@+id/layout_report_month5_valueBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/circlevaluebar_height"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15dip"/>

</LinearLayout>