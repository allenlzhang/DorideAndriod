<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_new"
    android:orientation="vertical" >

    <!-- 标题部分 -->

    <TextView
        android:id="@+id/dialog_carstate_title"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="车辆状态"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="top"
        android:background="#3f3f3f" />

    <!-- 内容部分 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:gravity="center"
        android:minHeight="76dip"
        android:orientation="horizontal"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_carstate_img_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_locked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="车锁"
                android:textColor="@color/text_color_gray2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_carstate_txt_lockTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/text_color_gray1"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_carstate_img_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_door_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="车门"
                android:textColor="@color/text_color_gray2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_carstate_txt_doorTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/text_color_gray1"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_carstate_img_engine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_engine_stop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="电机"
                android:textColor="@color/text_color_gray2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_carstate_txt_engineTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/text_color_gray1"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_carstate_img_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_air_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="空调"
                android:textColor="@color/text_color_gray2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_carstate_txt_airTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/text_color_gray1"
                android:textSize="10sp"
                android:text="关闭" />
        </LinearLayout>
    </LinearLayout>
    <!-- 按钮部分 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="top"
        android:background="#3f3f3f" />

    <TextView
        android:id="@+id/dialog_carstate_btn"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/dialog_btn_bg"
        android:gravity="center"
        android:text="确认"
        android:textColor="#333333"
        android:textSize="16sp" />

</LinearLayout>