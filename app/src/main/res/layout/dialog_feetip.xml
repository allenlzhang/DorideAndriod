<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feetip_lay_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/feetip_img_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/feetip_bg"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <View
        android:id="@+id/feetip_view_bottom"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/feetip_img_cha"
        android:layout_width="33.5dip"
        android:layout_height="33.5dip"
        android:layout_above="@id/feetip_view_bottom"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_cross_large" />

</RelativeLayout>