<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_list_show_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff0000" >

    <!--
         <View 
        android:id="@+id/layout_list_show_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"/>
    -->

    <ListView
        android:id="@+id/layout_pop_show_list"
        style="@style/public_listView"
        android:layout_width="@dimen/pop_width_list"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:background="#b2000000"
        android:paddingBottom="10dip" />

    <RadioGroup
        android:id="@+id/layout_pop_show_rg"
        android:layout_width="@dimen/pop_width_rg"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dip"
        android:background="#b2000000"
        android:divider="@drawable/transparent_bg"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="1dip"
        android:showDividers="middle" >

        <RadioButton
            android:id="@+id/layout_pop_show_rb_fhd"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:button="@null"
            android:drawableLeft="@drawable/radio_pie"
            android:drawablePadding="25dip"
            android:gravity="center_vertical"
            android:text="全高清FHD"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/layout_pop_show_rb_hd"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:button="@null"
            android:drawableLeft="@drawable/radio_pie"
            android:drawablePadding="25dip"
            android:gravity="center_vertical"
            android:text="高清HD"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/layout_pop_show_rb_sd"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:button="@null"
            android:drawableLeft="@drawable/radio_pie"
            android:drawablePadding="25dip"
            android:gravity="center_vertical"
            android:text="标清SD"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="gone" />
    </RadioGroup>

    <TextView
        android:id="@+id/layout_pop_show_txt"
        android:layout_width="@dimen/pop_width_txt"
        android:layout_height="wrap_content"
        android:background="#b2000000"
        android:gravity="center"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>