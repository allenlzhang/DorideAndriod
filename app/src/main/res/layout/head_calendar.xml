<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/white"
     >

    <ImageView
        android:id="@+id/head_calender_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/head_calender_txt"
        android:src="@drawable/arrow_calendar_left" />

    <TextView
        android:id="@+id/head_calender_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="2014å¹´"
        android:textColor="@color/text_color_gray3"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/head_calender_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head_calender_txt"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_calendar_right" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/text_color_gray4"
        />
</RelativeLayout>