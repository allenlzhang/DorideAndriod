<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/recorder_play_img_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="58dip"
        android:layout_marginRight="58dip"
        android:src="@drawable/pie_capture" />

    <ImageView
        android:id="@+id/recorder_play_img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/recorder_play_img_capture"
        android:src="@drawable/pie_back" />

    <ImageView
        android:id="@+id/recorder_play_img_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/recorder_play_img_capture"
        android:src="@drawable/pie_pause"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/recorder_play_img_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="58dip"
        android:layout_toRightOf="@id/recorder_play_img_capture"
        android:src="@drawable/pie_clip" />

    <ImageView
        android:id="@+id/recorder_play_img_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/recorder_play_img_clip"
        android:src="@drawable/pie_imgdb" />

</RelativeLayout>