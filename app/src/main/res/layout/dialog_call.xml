<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="154dip"
    android:layout_height="154dip"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/dialog_call">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="拨打电话"
            android:textColor="#999999"
            android:textSize="14sp" 
            android:gravity="center"/>
		<View 
		    android:id="@+id/call_line1"
		    style="@style/line_setting_h"/>
        <TextView
            android:id="@+id/call_txt_soft"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="软件使用问题"
            android:textColor="#333333"
            android:textSize="14sp" 
            android:gravity="center" />
        <View 
            android:id="@+id/call_line2"
		    style="@style/line_setting_h"/>
        <TextView
            android:id="@+id/call_txt_car"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="车辆其它问题"
            android:textColor="#333333"
            android:textSize="14sp" 
            android:gravity="center" />
    </LinearLayout>

    <TextView
            android:id="@+id/call_txt_cancel"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="14sp" 
            android:gravity="center" 
            android:background="@drawable/dialog_call"
            android:layout_marginTop="8dp"/>
</LinearLayout>