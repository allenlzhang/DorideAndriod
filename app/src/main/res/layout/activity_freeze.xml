<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/head_back" />

    <ImageView
        android:id="@+id/freeze_img_icon"
        android:layout_width="67.5dip"
        android:layout_height="67.5dip"
        android:layout_marginTop="45dip"
        android:src="@drawable/safe_freezed_no" />

    <TextView
        android:id="@+id/freeze_txt_des1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dip"
        android:text="描述"
        android:textColor="@color/text_color_gray2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/freeze_txt_des2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dip"
        android:text="描述"
        android:textColor="@color/text_color_gray2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/freeze_txt_option"
        style="@style/public_bottom_btn_blue"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="@dimen/usercenter_margin"
        android:layout_marginRight="@dimen/usercenter_margin"
        android:layout_marginTop="20dip"
        android:text="操作" />

</LinearLayout>