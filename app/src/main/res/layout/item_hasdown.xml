<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp" 
    android:id="@+id/hasdown_lay_main">

    <ImageView
        android:id="@+id/hasdown_img_thumbnail"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/car_main_bg" />

    <View
        android:id="@+id/hasdown_line_middle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/hasdown_img_thumbnail" 
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/hasdown_txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/hasdown_line_middle"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/hasdown_img_thumbnail"
        android:gravity="center"
        android:text="文件时间"
        android:textColor="@color/text_color_gray3"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/hasdown_img_type"
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:layout_below="@id/hasdown_line_middle"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/hasdown_img_thumbnail"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/hasdown_txt_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hasdown_line_middle"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/hasdown_img_type"
        android:text="文件大小"
        android:textColor="@color/text_color_gray2"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/hasdown_checkbox_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/check_hasdown_bg" />
    <TextView 
        android:id="@+id/hasdown_txt_delete"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/text_color_blue"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

</RelativeLayout>