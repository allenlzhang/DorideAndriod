<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/download_img_bg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/download_icon_new" />

        <!--<com.linewin.chelepie.ui.view.gif.GifView-->
            <!--android:id="@+id/download_gif_bg"-->
            <!--android:layout_width="250dp"-->
            <!--android:layout_height="250dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:visibility="gone"-->
            <!--gif:delay="1"-->
            <!--gif:src="@raw/download_gif_loading"-->
            <!--gif:stop="true" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/download_txt_Tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="是否立即更新您的设备"
        android:textColor="#3ec0ea"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/download_txt_Tip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_txt_Tip1"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#999999"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/download_txt_nextTime"
            android:layout_width="110dp"
            android:layout_height="31dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/download_btn_bg"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/download_txt_downNow"
            android:layout_width="110dp"
            android:layout_height="31dp"
            android:background="@drawable/download_btn_bg"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>