<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/head_back" />

        <RelativeLayout
            android:id="@+id/manage_customer_service_layout1"
            style="@style/setting_layout1"
            android:layout_marginBottom="14dip"
            android:layout_marginTop="14dip" >

            <TextView
                android:id="@+id/text_title1"
                style="@style/setting_userinfo_text1"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:text="拨打客服热线" />

            <ImageView
                android:id="@+id/car_crrow1"
                style="@style/setting_img2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/manage_customer_service_layout2"
            style="@style/setting_layout1" >

            <TextView
                android:id="@+id/text_title2"
                style="@style/setting_userinfo_text1"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:text="客户服务悬浮按钮开关" />

            <CheckBox
                android:id="@+id/manage_customer_service_cb"
                style="@style/manage_message_checkbox"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
</LinearLayout>