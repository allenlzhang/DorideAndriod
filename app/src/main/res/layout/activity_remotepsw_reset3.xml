<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical" >
    <include
        android:id="@+id/remotepsw_reset_title"
        layout="@layout/head_back" />
    <TextView
        android:id="@+id/remotepsw_reset3_txt_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="@dimen/safe_margin_h"
        android:layout_marginTop="20dip"
        android:text="请输入原密码"
        android:textColor="@color/text_color_gray1"
        android:textSize="14sp" />

    <com.carlt.doride.ui.view.PwdEditText
        android:id="@+id/remotepsw_reset3_pwdedt1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/romote_edit_bg"
        android:inputType="number"
        android:cursorVisible="false"
        android:maxLength="6"/>

    <TextView
        android:id="@+id/remotepsw_reset3_txt_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="@dimen/safe_margin_h"
        android:layout_marginTop="20dip"
        android:text="请输入新密码"
        android:textColor="@color/text_color_gray1"
        android:textSize="14sp" />

    <com.carlt.doride.ui.view.PwdEditText
        android:id="@+id/remotepsw_reset3_pwdedt2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/romote_edit_bg"
        android:inputType="number"
        android:cursorVisible="false"
        android:maxLength="6"/>
    
    <TextView
        android:id="@+id/remotepsw_reset3_txt_edit"
        style="@style/public_bottom_btn"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="@dimen/usercenter_margin"
        android:layout_marginRight="@dimen/usercenter_margin"
        android:layout_marginTop="20dip"
        android:text="修改" />

</LinearLayout>