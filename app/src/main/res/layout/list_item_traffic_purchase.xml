<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:minHeight="64dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvFlowType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流量充值"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/traffic_buy_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/traffic_buy_value"
            android:textColor="#333333"
            android:textSize="14sp" />
		<TextView
            android:id="@+id/traffic_buy_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text=""
            android:textColor="@color/text_color_gray1"
            android:textSize="14sp" 
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/traffic_buy_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="44dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/traffic_buy_amount"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
      <TextView
        android:id="@+id/traffic_buy_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="5dp"
        android:text="@string/traffic_buy_amount"
        android:textColor="#999999"
        android:textSize="12sp" />
      <TextView
        android:id="@+id/tvFlowEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="5dp"
        android:text="@string/traffic_buy_amount"
        android:visibility="gone"
        android:textColor="#999999"
        
        android:textSize="12sp" />
        
    </LinearLayout>

  
</LinearLayout>