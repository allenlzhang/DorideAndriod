<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dip" >

    <!-- 标题部分 -->

    <TextView
        android:id="@+id/dialog_withedit2_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dip"
        android:gravity="center"
        android:text="提示"
        android:textColor="#333333"
        android:textSize="16sp" />
 <!-- 小标题 -->

    <TextView
        android:id="@+id/dialog_withedit2_title2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="提示"
        android:textColor="#666666"
        android:visibility="gone"
        android:textSize="13sp" />
    <!-- 内容部分 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="76dip"
        android:orientation="vertical"
        android:paddingLeft="45dip"
        android:paddingRight="45dip" >

        <EditText
            android:id="@+id/dialog_withedit2_edt"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:textColor="@color/text_color_gray3"
            android:textColorHint="@color/text_color_gray1"
            android:textSize="16sp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#3EC0EA" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="top"
            android:background="@drawable/dialog_div_h" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="0.5dip"
            android:background="@drawable/dialog_div_v"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_withedit2_btnl"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#505050"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:background="#BDBDBD"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/dialog_withedit2_btnr"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="#505050"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>