<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/head_back" />


    <RelativeLayout
        android:layout_below="@+id/title"
        android:id="@+id/check_host_relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
         >

        <com.carlt.sesame.ui.view.ValidateEditText
            android:id="@+id/check_host_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/check_host_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:layout_marginTop="4.5dp"
            android:background="@drawable/btn_code_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/text_color_gray2"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <TextView
        android:id="@+id/check_host_btn"
        style="@style/public_bottom_btn_blue"
        android:layout_below="@id/check_host_relative1"
        android:layout_marginLeft="@dimen/usercenter_margin"
        android:layout_marginRight="@dimen/usercenter_margin"
        android:text="确认" />

</RelativeLayout>