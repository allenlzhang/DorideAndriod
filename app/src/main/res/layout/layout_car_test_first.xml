<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="8dip" >

    <include layout="@layout/head_sub2" />

    <RelativeLayout
        android:id="@+id/layout_car_test_first_layout1"
        style="@style/setting_userinfo_layout1"
        android:layout_marginTop="40dip"
        android:background="@drawable/edittext_bg_focused_no">

        <EditText
            android:id="@+id/layout_car_test_first_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请填写爱车行驶的总里程"
            android:inputType="number"
            android:textColor="@color/text_color_gray2"
            android:textColorHint="@color/text_color_gray1"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="公里"
            android:textColor="@color/text_color_gray2"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_car_test_first_layout2"
        style="@style/setting_userinfo_layout1" 
         android:background="@drawable/edittext_bg_focused_no"
         android:layout_marginTop="20dip">

        <TextView
            android:id="@+id/layout_car_test_first_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_title3"
            android:drawableRight="@drawable/icon_calendar"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="请选择购车时间"
            android:textColor="@color/text_color_gray2"
            android:textSize="@dimen/text_size_small"
            android:textColorHint="@color/text_color_gray1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/layout_car_test_first_btn"
        style="@style/public_bottom_btn"
        android:layout_marginLeft="@dimen/usercenter_margin"
        android:layout_marginRight="@dimen/usercenter_margin"
        android:layout_marginTop="50dip"
        android:text="确定" />

</LinearLayout>